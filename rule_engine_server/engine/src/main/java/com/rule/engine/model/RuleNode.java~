package com.rule.engine.model;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
public class RuleNode {
    String type;
    RuleNode left;
    RuleNode right;
    String value;

    // Constructor for operand
    public RuleNode(String type, String value) {
        this.type = type;
        this.value = value;
    }

    // Constructor for operator
    public RuleNode(String type, RuleNode left, RuleNode right) {
        this.type = type;
        this.left = left;
        this.right = right;
    }

    @Override
    public String toString() {
        if ("operand".equals(type)) {
            return value;
        } else {
            return "(" + left + " " + value + " " + right + ")";
        }
    }
}